@model TodoListItem
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
<div>
    <h4>Todo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Model.Id
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Model.DateAdded
        </dd>
        <dt>
            Title
        </dt>
        <dd>
            @Model.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div> 